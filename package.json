    "Leigh Godson <leigh.godson@atos.net>"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/identity": "4.4.1",
    "@azure/storage-blob": "12.29.1",
    "applicationinsights": "2.9.6",
    "joi": "17.6.3",
    "log-timestamp": "0.3.0"
  },
  "devDependencies": {
    "eslint": "9.39.1",
